# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Configuration files
*.env text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.txt text eol=lf
*.md text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.ico binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
